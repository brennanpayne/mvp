<h1>Editing question #<%= @question.id %></h1>


<%= form_tag(question_url(@question), method: 'put') do %>

  <div>
    <%= label_tag :summary %><br />
    <%= text_field_tag :summary, @question.summary %>
  </div>

  <div>
    <%= label_tag :rating %><br />
    <%= number_field_tag :rating, @question.rating %>
  </div>


  <div>
    <%= submit_tag "Update question" %>
  </div>

<% end %>
